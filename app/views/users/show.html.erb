<h1><%= @user.username %></h1>

<% if user_signed_in? %>
  <% unless current_user == @user %>
    <% if current_user.following?(@user) %>
      <%= link_to 'Unfollow', follow_path(current_user.follows.find_by(followed_id: @user.id)), method: :delete %>
    <% else %>
      <%= link_to 'Follow', follows_path(followed_id: @user.id), method: :post %>
    <% end %>
  <% end %>
<% end %>

<h2>Tweets</h2>

<% @tweets.each do |tweet| %>
  <p><%= tweet.content %></p>
<% end %>
